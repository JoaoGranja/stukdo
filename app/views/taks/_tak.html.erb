
<div class="panel panel-info">
	<div class="panel-heading"> 
	<%= link_to edit_tak_path(tak) do %>
		created <%= time_ago_in_words(tak.created_at)%> ago
		<% end %>
	<%= link_to "x", tak_path(tak), method: :delete, data: {confirm: "Are you sure?"}, class: "pull-right"%>
	</div>
	<div class="panel-body"> <%= raw(tak.content_html)%></div>
	<div class="panel-footer text-center"> 
	<% if tak.state == "doing" %>
	<div class="btn-group btn-group-justified">
	<%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_tak_path(tak, state: "to_do"), method: :put, class: "btn btn-info btn-md btn-block" %>
	<%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_tak_path(tak, state: "done"), method: :put, class: "btn btn-info btn-md btn-block" %>
	</div>
	<% elsif tak.state == "done" %>
	<%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_tak_path(tak, state: "doing"), method: :put, class: "btn btn-info btn-md btn-block" %>
	<% else %>
	<%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_tak_path(tak, state: "doing"), method: :put, class: "btn btn-info btn-md btn-block" %>
	<% end %>

	</div>
</div>